<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Background circle -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#A80F48"/>
                </shape>
            </item>
            <!-- Tick mark (white) -->
            <item android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp">
                <shape android:shape="line">
                    <stroke android:width="4dp" android:color="@android:color/white"/>
                </shape>
            </item>

            <!-- White tick mark (example: V shape) -->
            <item android:gravity="center">
                <vector
                    android:width="24dp"
                    android:height="24dp"
                    android:tint="@android:color/white"
                    android:viewportWidth="24.0"
                    android:viewportHeight="24.0">
                    <path
                        android:fillColor="#FFFFFFFF"
                        android:pathData="M9,16.2L4.8,12l-1.4,1.4L9,19 21,7l-1.4,-1.4L9,16.2z"/>
                </vector>
            </item>
        </layer-list>
    </item>

    <!-- Unchecked state -->
    <item>
        <layer-list>
            <!-- Transparent circle with a gray border -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="@android:color/transparent"/>
                    <stroke android:width="2dp" android:color="@android:color/darker_gray"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
