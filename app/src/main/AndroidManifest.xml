<?xml version="1.0" encoding="utf-8"?>


<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Recipe"
        tools:targetApi="34">

        <activity
            android:name=".activity.SplashActivity"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.AppCompat"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Recipe">
        </activity>

        <activity
            android:name=".activity.RecipePageActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.AppCompat"
            />

        <activity
            android:name=".activity.ViewRecipeActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.AppCompat"
            />
        <activity
            android:name=".activity.ViewCategoriesActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.AppCompat"
            />
        <activity
            android:name=".activity.InstructionsActivity"
            android:theme="@style/Theme.AppCompat"
            android:windowSoftInputMode="adjustPan"
        />
        <activity
            android:name=".activity.OvenActivity"
            android:theme="@style/Theme.AppCompat"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".util.AddNewCategory"
            android:theme="@style/Theme.AppCompat"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".activity.IngredientsActivity"
            android:theme="@style/Theme.AppCompat"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".activity.NewCategoryActivity"
            android:theme="@style/Theme.AppCompat"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".activity.NewRecipeActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.AppCompat"
        />

    </application>

</manifest>